{
  "name": "arte-della-lettura",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "npx eslint --fix . --ext .js,.jsx,.ts,.tsx .",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "cm": "cz"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,html, mdx, css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "gray-matter": "^4.0.2",
    "next": "^10.0.3",
    "next-compose-plugins": "^2.2.1",
    "next-mdx-remote": "^3.0.2",
    "next-pwa": "^5.0.0",
    "next-seo": "^4.24.0",
    "nprogress": "^0.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "autoprefixer": "^10.2.5",
    "commitiquette": "^1.1.0",
    "cross-env": "^7.0.3",
    "devmoji": "^2.2.1",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "postcss": "^8.1.14",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.1",
    "standard-version": "^9.3.0",
    "tailwindcss": "^2.0.1",
    "typescript": "^4.2.4",
    "webpack": "^5.35.1"
  },
  "browserslist": [
    "> 5% in IT"
  ],
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "section": "Style"
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "perf",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ],
    "commitUrlFormat": "https://github.com/mokkapps/changelog-generator-demo/commits/{{hash}}",
    "compareUrlFormat": "https://github.com/mokkapps/changelog-generator-demo/compare/{{previousTag}}...{{currentTag}}"
  },
  "peerDependencies": {
    "@babel/core": "^7.0.0",
    "commitizen": "^4.2.4"
  }
}
